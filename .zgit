# Add
alias ga='git add'
alias gaa='git add .'
alias gap='git add -p'

# Branch
alias gb='git branch'
alias gbd='git branch -d'
alias gbD='git branch -D'

# Cherry-pick
alias gcp='git cherry-pick'
alias gcpc='git cherry-pick --continue'
alias gcpa='git cherry-pick --abort'
alias gcps='git cherry-pick --skip'

# Clone
alias gcl='git clone'

# Commit
alias gcm='git commit -m'
alias gcmn='git commit --no-verify -m'
alias gca='git commit --amend'
alias gcar='git commit --amend --reuse-message=HEAD'
alias gcarr='git commit --amend --reuse-message=HEAD --reset-author'

# Config
alias gcf='git config'
alias gcfun='git config user.name'
alias gcfue='git config user.email'
alias gcfme='git config user.name "Alex Pyzhianov" && git config user.email alex.pyzhianov@gmail.com'

# Diff
alias gd='git diff'
alias gdc='git diff --cached'

# Fetch
alias gf='git fetch'

# Init
alias gi='git init'

# Log
alias gl='git log --date=relative'
alias glg='gl --graph'
alias gls='gl --stat'
alias glp='gl --patch'
alias glo='git log --pretty=format:"%h   %s %C(yellow)(%cr)"'

# Merge
alias gm='git merge'
alias gmc='git merge --continue'
alias gma='git merge --abort'
alias gms='git merge --skip'

# Pull
alias gpl='git pull'
alias gplr='git pull --rebase'

# Push
alias gpu='git push'
alias gpuf='git push -f'
alias gpuu='git push -u origin HEAD'

# Rebase
alias grb='git rebase'
alias grbc='git rebase --continue'
alias grba='git rebase --abort'
alias grbs='git rebase --skip'

# Reflog
alias grl='git reflog'

# Remote
alias grm='git remote'
alias grma='git remote add'
alias grmr='git remote remove'

# Reset / remote
alias gr='git reset'
alias grh='git reset --hard'

# Status
alias gst='git status'
alias gsts='git status -s'

# Stash
alias gsp='git stash push -u -m'
alias gsps='git stash push --staged -m'
alias gsl='git stash list'
alias gsa='git stash apply'
alias gsd='git stash drop'
alias gsc='git stash clear'

# Switch
alias gsw='git switch'
alias gswc='git switch -c'

# Special
alias wipc='git add . && git commit --no-verify -m "wip"'
alias wipr='git reset --soft HEAD~1'
alias wips='git stash push -u -m "wip"'
alias wipp='git stash pop'
