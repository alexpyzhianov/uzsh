alias g='git'

# Init
alias gi='git init'

# Add
alias ga='git add'
alias gaa='git add .'

# Commit
alias gc='git commit'
alias gcm='git commit -m'
alias gcn='git commit --no-verify'
alias gca='git commit --amend'
alias gcar='git commit --amend --reuse-message=HEAD'
alias gcarr='git commit --amend --reuse-message=HEAD --reset-author'

# Clone
alias gcl='git clone'

# Reset / remote
alias gr='git reset'
alias grh='git reset --hard'

# Stash
alias gsp='git stash push -u'
alias gspm='git stash push -u -m'
alias gsl='git stash list'
alias gsa='git stash apply'
alias gsd='git stash drop'
alias gsc='git stash clear'

# Diff
alias gd='git diff'
alias gdc='git diff --cached'

# Log
alias gl='git log --date=relative'
alias glg='gl --graph'
alias gls='gl --stat'
alias glp='gl --patch'
alias glo='git log --pretty=format:"%h   %s %C(yellow)(%cr)"'

# Branch
alias gb='git branch'
alias gbd='git branch -d'

# Switch
alias gs='git switch'
alias gsc='git switch -c'

# Merge
alias gm='git merge'
alias gmc='git merge --continue'
alias gma='git merge --abort'
alias gms='git merge --skip'

# Push / pull
alias gpu='git push'
alias gpuf='git push -f'
alias gpuu='git push -u origin HEAD'
alias gpl='git pull'

# Cherry-pick
alias gcp='git cherry-pick'
alias gcpc='git cherry-pick --continue'
alias gcpa='git cherry-pick --abort'
alias gcps='git cherry-pick --skip'
